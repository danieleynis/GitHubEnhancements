{
  "manifest_version": 2,
  "name": "GitHub Enhancements",
  "version": "0.2",
  "description": "GitHub enhancements to make your life easier",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "storage"
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "http://github.com/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "content.js"
      ]
    }
  ]
}